    <h3>Historial de actividades:</h3>
    {{#if events}}
    <ul>
        {{#each events}}
        <hr>
        <li>
            <div>
                <p>{{this.event}}</p>
                <p>{{this.description}}</p>
                <p> Fecha y hora : {{this.date}}</p>
            </div>
        </li>
        {{/each}}
    </ul>
    {{else}}
    <h3> {{user.name}} no tenes un historial de compra  </h3>
    {{/if}}
