<h2 class="text-light m-3 me-auto">Productos</h2>
<br>
{{#if length}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr> <th class="text-center text-light">ID</th> <th class="text-center text-light">Nombre</th> <th class="text-center text-light">Precio</th> </tr>
            {{#each productos}}
                <tr>
                    <td class="text-center text-light">{{this.id}}</td>
                    <td class="text-center text-light">{{this.name}}</td>
                    <td class="text-center text-light">{{this.price}}</td>
                    <td class="text-center text-light "><img src="{{this.src}}" alt="src" height="100 " width="100"></td>
                </tr>
            {{/each}}
        </table>
        {{else}}
        <h3 class='alert, alert-danger'> No se encontraron datos.</h3>
    </div>
{{/if}}
<a href="./"><button class="btn btn-outline-light">Ir a formulario de Carga</button></a>